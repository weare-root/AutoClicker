{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build package",
      "type": "shell",
      "command": "go build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build"
    },
    {
      "label": "Build package and execute",
      "type": "process",
      "command": "./AutoClicker",
      "windows": {
        "command": "AutoClicker.exe"
      },
      "dependsOn": ["Build package"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build"
    },
    {
      "label": "Only execute package",
      "type": "shell",
      "command": "./AutoClicker",
      "windows": {
        "command": "cmd \\C AutoClicker.exe"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build"
    },
    {
      "label": "Release Build",
      "type": "shell",
      "command": "./release.sh",
      "windows": {
        "command": "cmd \"/C release.bat\""
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build"
    }
  ]
}
