{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build package",
      "type": "shell",
      "command": "go build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Build package and execute",
      "type": "shell",
      "command": "go build && ./AutoClicker",
      "windows": {
        "command": "go build && .\\autoclicker.exe"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Only execute package",
      "type": "shell",
      "command": "./AutoClicker",
      "windows": {
        "command": ".\\AutoClicker.exe"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build"
    }
  ]
}
